{
    "data": {
        "dataset": "voc",
        "dataset_root": "/home/pengwu/data/VOCdevkit/"
    },
    "model": {
        "num_classes": 21,
        "extras": [256, "S", 512, 128, "S", 256, 128, 256, 128, 256],
        "multibox": {
            "num_anchors": [4, 6, 6, 6, 4, 4],
            "feat_channels": [512, 1024, 512, 256, 256, 256]
        },
        "pretrained_weights": "model/vgg16_reducedfc.pth"
    },
    "coder": {
        "input_shape": [300, 300],
        "sizes": [0.1, 0.2, 0.37, 0.54, 0.71, 0.88, 1.05],
