{
    "data": {
        "dataset": "voc",
        "dataset_root": "/home/pengwu/data/VOCdevkit/"
    },
    "model": {
        "num_classes": 21,
        "fpn": [512, 512, 1024, 512],
        "multibox": {
            "num_anchors": [3, 3, 3, 3],
            "arm_channels": [512, 512, 1024, 512],
            "odm_channels": [256, 256, 256, 256]
        },
        "pretrained_weights": "model/vgg16_reducedfc.pth"
    },
    "coder": {
        "input_shape": [320, 320],
        "sizes": [0.1, 0.2, 0.4, 0.8],
        "aspect_ratios": [[2], [2], [2], [2]],
        "output_stride": [8.0, 16.0, 32.0, 64.0],
        "clip": true,
        "variances": [0.1, 0.2]
    },
    "train": {
        "max_epoches": 250,
        "batch_size": 32,
        "num_workers": 8,
        "checkpoints_epochs": 100,
        "test_epochs": 100,
        "optimizer": {
            "optimizer": "sgd",
            "learning_rate": 1e-3,
            "momentum": 0.9,
            "weight_decay": 5e-4,
            "gamma": 0.1
        },
        "warmup_epoch": 5,
        "lr_steps": [150, 200],
        "aug_params": {
            "bgr_mean": [104, 117, 123],
            "mean": [0.485, 0.456, 0.406],
            "std": [0.229, 0.224, 0.225]
        },
        "resume_weights": "model/refine300_vgg16.pth"
    },
    "test": {
        "nms_thresh": 0.7
    },
    "save_folder": "./checkpoint",
    "phase": "train"
}
